{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "boat:propulsion",
      "is_summonable": true,
      "is_spawnable": false,
      "is_experimental": false
    },
    "component_groups": {
      "propulsion:propulsion": {
        "minecraft:behavior.knockback_roar": {
          "priority": 1,
          "duration": 1,
          "attack_time": 0.1,
          "knockback_damage": 0,
          "knockback_strength": 20,
          "knockback_range": 50,
          "cooldown_time": 0.1
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "propulsion",
          "inanimate"
        ]
      },
      "minecraft:collision_box": {
        "width": 0,
        "height": 0
      },
      "minecraft:knockback_resistance": {
        "value": 1000,
        "max": 1000
      },
      "minecraft:break_blocks": {
        "breakable_blocks": [
          "glass",
          "snow"
        ]
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": false
      },
      "minecraft:scale": {
        "value": 0.01
      },
      //Sets the boat speed in water
      "minecraft:underwater_movement": {
        "value": 0.1
      },
      "minecraft:water_movement": {
        "drag_factor": 0.2
      },
      "minecraft:navigation.walk": {
        "can_sink": true
      },
      //Add this component if you want your boat to be controlled with WASD
      "minecraft:input_ground_controlled": {},
      "minecraft:health": {
        "value": 40,
        "max": 40
      },
      "minecraft:damage_sensor": {
        "triggers": [
          { // Disables damage to the berry bushes
            "on_damage": {
              "filters": {
                "test": "is_block",
                "subject": "block",
                "value": "minecraft:sweet_berry_bush"
              }
            },
            "deals_damage": false
          },
          { // Sets bullet/arrow damage to half a heart
            "cause": "projectile",
            "deals_damage": true,
            "damage_multiplier": 0.08
          },
          { // Disables melee damage
            "cause": "attack",
            "deals_damage": false
          }
        ]
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:drying_out_timer": {
        "total_time": 2000
      },
      "minecraft:despawn": {
        "filters": {
          "any_of": [
            {
              "test": "distance_to_nearest_player",
              "operator": ">",
              "value": 4
            }
          ]
        }
      },
      //Sets the boat speed on the ground (set this to zero if you don't want your boats to move on the ground)
      "minecraft:movement.hover": {},
      "minecraft:movement": {
        "value": 0.3
      },
      //This is to prevent the boat from not stopping whenever a player exits, said the boat
      //"minecraft:movement.basic": {},
      "minecraft:inventory": {
        "container_type": "minecart_chest",
        "inventory_size": 6
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [ "propulsion:propulsion" ]
        }
      }
    }
  }
}
