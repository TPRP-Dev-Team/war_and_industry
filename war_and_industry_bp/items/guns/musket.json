{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "guns:musket",
			"category": "equipment" // The creative inventory or recipe book tab that the block is placed into
			},
			"components": {
				"minecraft:icon": {
					"texture": "guns_musket"
				},
				"minecraft:display_name": {
					"value": "Musket\nMusketball"
				},
				"minecraft:hover_text_color": "gray",
				"minecraft:durability": {
					"max_durability": 11
				},
				"minecraft:cooldown": {
					"category": "musket",
					"duration": 1.0
				},
				"minecraft:max_stack_size": 1,
				"minecraft:hand_equipped": true,
				"minecraft:on_use": {
					"on_use": {
						"condition": "q.remaining_durability>1",
						"event": "g18_shoot"
						//"target": "self"
					}
				},
				"minecraft:render_offsets": {
					"main_hand": {
						"first_person": {
							"position": [
								0.5,
								0.5,
								-1.5
							],
							"rotation": [
								0,
								270,
								90
							],
							"scale": [
								0.025,
								0.025,
								0.025
							]
						},
						"third_person": {
							"position": [
								-1.6,
								2.1,
								1.1
							],
							"rotation": [
								45,
								190,
								90
							],
							"scale": [
								0.03,
								0.03,
								0.03
							]
						}
					}
				}
			},
			"events": {
				"g18_shoot": {
					"sequence": [
						{
							"shoot": {
								//"target": "target",
								"projectile": "minecraft:arrow",
								"launch_power": 3
							}
						},
						{
							"damage": {
								"type": "durability",
								"amount": 10,
								"target": "self"
							}
						},
						{
							"run_command": {
								"command": [
									"playsound guns.musket.fire @a ~ ~ ~ 1 1 0"
								]
							}
						},
						{
							"condition": "q.remaining_durability>1 && query.is_sneaking",
							"run_command": {
								"command": [
									"camerashake add @s 0.006 1 rotational"
								]
							}
						},
						{
							"condition": "q.remaining_durability>1 && !query.is_sneaking",
							"run_command": {
								"command": [
									"camerashake add @s 0.02 1 rotational"
								]
							}
						},
						{
							"condition": "q.remaining_durability>1 && query.is_sprinting",
							"run_command": {
								"command": [
									"camerashake add @s 0.06 1 rotational"
								]
							}
						},
						{
							"condition": "q.remaining_durability==1",
							"run_command": {
								"command": [
									"title @s actionbar Ammo 0/1"
								]
							}
						}
					]
				}
			}
		}
}