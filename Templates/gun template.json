{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "guns:m16a4", //the guns itendifier
			"category": "equipment" //Tells the game that the item should appear in the "equipment" category
		},
		"components": {
			"minecraft:icon": {
				"texture": "guns_m16a4_hd_ip" //texture identifer, set in "item_texture.json"
			},
			"minecraft:display_name": {
				"value": "M16A4" //What the gun shows as its display text
			},
			"minecraft:durability": {
				"max_durability": 31
			},
			"minecraft:max_stack_size": 1,
			"minecraft:creative_category": { //Tells the game that the item should appear in the "equipment" category
				"parent": "itemGroup.name.bows"
			},
			"minecraft:hand_equipped": true, //not 100% sure what this does so just leave it
			"minecraft:on_use": {
				"on_use": {
					"condition": "q.remaining_durability>0",
					"event": "guns:m16_shoot" //This determines the events identifier, for being called in the events section below
				}
			},
			//the component below assumes using 64x64 textures as that is the prefered size for our packs guns
			"minecraft:render_offsets": { //ONLY CHANGE VALUES MARKED UNLESS TOLD OTHERWISE BY KEITH, For determining how the gun shows up in first and third person views (third person is also what other people see)
				"main_hand": {
					"first_person": {
						"position": [
							0.5,
							0.5,
							-1.5 //Change this to move the gun foreward in first person
						],
						"rotation": [
							0,
							270,
							90
						],
						"scale": [
							0.025,
							0.025,
							0.025
						]
					},
					"third_person": {
						"position": [
							-1.6,
							1.8, //Change this to move the gun foreward in first person
							1.1
						],
						"rotation": [
							45,
							190,
							90
						],
						"scale": [
							0.03,
							0.03,
							0.03
						]
					}
				}
			}
		},
		"events": {
			"guns:m16_shoot": {
				"sequence": [
					{ // Shoot the projectile
						"shoot": {
							"projectile": "guns:bullet_556x45", //bows use "minecraft:arrow", the M16A4(s) uses "guns:bullet_556x45", custom projectile are to be made for every ammo type, guns which use the same ammo type should use the same projectile
							"launch_power": 12
						}
					},
					{ //Decrease durability, these guns track their ammo status with their durability
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					},
					{// Gunfire Sound
						"condition": "q.remaining_durability>1",
						"run_command": {
							"command": [
								"playsound guns.m16.fire @a ~ ~ ~ 1 1 0"
							]
						}
					},
					{ // Recoil when sneaking
						"condition": "q.remaining_durability>1 && query.is_sneaking",
						"run_command": {
							"command": [
								"camerashake add @s 0.003 1 rotational"
							]
						}
					},
					{ // Recoil when standing
						"condition": "q.remaining_durability>1 && !query.is_sneaking",
						"run_command": {
							"command": [
								"camerashake add @s 0.01 1 rotational"
							]
						}
					},
					{ // Recoil when sprinting
						"condition": "q.remaining_durability>1 && query.is_sprinting",
						"run_command": {
							"command": [
								"camerashake add @s 0.04 1 rotational"
							]
						}
					},
					{ //Remaining code is for outputing the ammo status to the actionbar (text above hotbar) and giving it the reload gun
						"condition": "q.remaining_durability==1",
						"run_command": {
							"command": [
								"title @s actionbar Ammo 0/30",
								"replaceitem entity @s slot.weapon.mainhand 0 guns:m16a4_empty"
							]
						}
					},
